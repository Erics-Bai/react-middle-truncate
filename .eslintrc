{
  "plugins": [
    "mocha"
  ],
  "env": {
    "mocha": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "global": true,
    "Symbol": true,
    "__DEV__": true
  },
  "rules": {
    "camelcase": 1,
    "mocha/no-mocha-arrows": 2,
    "mocha/no-exclusive-tests": 2
  },
  "extends": [
    "mongodb-js/browser",
    "mongodb-js/react"
  ]
}
